{
  "name": "bedelightful/flow-expr-engine",
  "description": "A powerful engine for handling flow components and expressions.",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "lihq1403",
      "email": "lihqing1403@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "bedelightful/sdk-base": "~0.1",
    "guzzlehttp/guzzle": "^6.0|^7.0",
    "ext-openssl": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.4",
    "phpunit/phpunit": "^9.5",
    "bedelightful/rule-engine-core": "~0.0",
    "hyperf/di": "*",
    "hyperf/config": "*",
    "hyperf/engine-swow": "*",
    "hyperf/framework": "*",
    "hyperf/http-server": "*",
    "phpstan/phpstan": "^1.0"
  },
  "suggest": {
    "bedelightful/rule-engine-core": "~0.0"
  },
  "autoload": {
    "psr-4": {
      "Delightful\\FlowExprEngine\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Delightful\\FlowExprEngine\\Test\\": "tests/"
    }
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix $1",
    "test": "./vendor/bin/phpunit",
    "analyse": "@php vendor/bin/phpstan analyse --memory-limit 512M -l 0 -c phpstan.neon ./src ./tests"
  },
  "repositories": [
    {
      "type": "github",
      "url": "https://github.com/saashqdev/delightful/rule-engine-core.git"
    },
    {
      "type": "github",
      "url": "https://github.com/saashqdev/delightful/sandbox.git"
    },
    {
      "type": "github",
      "url": "https://github.com/saashqdev/delightful/sdk-base.git"
    }
  ],
  "extra": {
    "hyperf": {
      "config": "Delightful\\FlowExprEngine\\Hyperf\\ConfigProvider"
    },
    "branch-alias": {
      "dev-master": "0.1-dev"
    }
  }
}
